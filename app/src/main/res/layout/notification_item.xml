<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:text="Czy wykonałeś już swój dzisiejszy cel ?"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="00:00"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        />
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="3dp"
    android:id="@+id/notification_image"
    android:src="@drawable/ic_baseline_alarm_on_24"

    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_image"
        android:layout_centerHorizontal="true"
        android:text="Dzień przerwy"
        android:id="@+id/brake_bt"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIE"
        android:layout_alignParentRight="true"
        android:layout_below="@id/notification_image"
        android:id="@+id/no_bt"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tak"
        android:layout_below="@id/notification_image"
        android:id="@+id/yes_bt"
        />
</RelativeLayout>